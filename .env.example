APP_URL=http://localhost


ZFINGER_API_URL=https://zfinger.datasektionen.se
SPAM_API_KEY=the_key
SPAM_API_URL=https://spam.datasektionen.se/api/sendmail

# SSO Configuration (OpenID Connect)
# Required: OAuth2/OIDC client credentials from your SSO provider
SSO_CLIENT_ID=your_sso_client_id
SSO_CLIENT_SECRET=your_sso_client_secret

# Required: SSO provider's issuer URL (OpenID Connect discovery endpoint)
SSO_ISSUER_URL=https://sso.datasektionen.se

# Required: Callback URL where SSO will redirect after authentication
# Must match the redirect URI registered with your SSO provider
SSO_REDIRECT_URI=${APP_URL}/auth/callback

# Optional: Where to redirect after SSO logout (defaults to APP_URL)
SSO_LOGOUT_REDIRECT_URI=${APP_URL}

# Optional: SSL verification settings (recommended: true for production)
SSO_VERIFY_SSL=true

# Optional: Request timeout in seconds (default: 30)
SSO_TIMEOUT=30

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

